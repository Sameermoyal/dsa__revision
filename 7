#include<bits/stdc++.h>
using namespace std;

//7.Create a program to generate a new array where each element is the sum of the element and the next element.


int main(){
    int arr[6]{1,4,8,10,45,12};
    int n=sizeof(arr)/sizeof(arr[0]);
    int newArr[n];
    
    for(int i=0;i<n-1;i++){
      newArr[i]=arr[i]+arr[i+1];
    }
    
    for(auto it:newArr){
        cout<<it<<" ";
    }
   
}
#include<bits/stdc++.h>
using namespace std;

// 4.Create a program to generate an array where each element is
// the difference between the original element and its index.


int main(){
    int arr[4]{6,7,12,23};
    int n=sizeof(arr)/sizeof(arr[0]);
    int result[n];
    
    for(int i=0;i<n;i++){
       result[i]=abs(arr[i]-i);
    }
    
    for(auto it:result){
        cout<<it<<" ";
    }
   
}
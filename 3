#include<bits/stdc++.h>
using namespace std;


// 4.Create a program to generate an array where each element is
// the difference between the original element and its index.


int main(){
    int arr[4]{2,3,4,5};
    int n=sizeof(arr)/sizeof(arr[0]);
    int result[n];
    
    for(int i=0;i<n;i++){
        if(i==0){
            result[i]=arr[i];
        }else{
             result[i]=arr[i]*arr[i]+result[i-1];
        }
        
       
    }
    
    for(auto it:result){
        cout<<it<<" ";
    }
}
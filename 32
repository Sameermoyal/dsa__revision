#include<bits/stdc++.h>
using namespace std;

//: Write a program to subtract the next element of an array from its current element, adding the index as an offset.
int main(){
    vector<int>arr={2,4,2,2,3} ;
    
    for(int i=0;i<arr.size();i++){
       arr[i]=arr[i]-arr[i+1]+i;
    }
    
    for(auto it:arr){
        cout<<it<<endl;
    }
}

